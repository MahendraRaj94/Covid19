<?xml version="1.0" encoding="utf-8"?>
<layout>

  <data>
    <variable
        name="viewModel"
        type="com.mahendra.covid.viewmodel.MainActivityViewModel" />
  </data>
  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      xmlns:tools="http://schemas.android.com/tools"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/colorPrimaryDark"
      android:orientation="vertical"
      tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/nav_host_fragment"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dime_0_dp" />

    <com.ismaeldivita.chipnavigation.ChipNavigationBar
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:cnb_menuResource="@menu/bottom_menu"
        app:cnb_orientationMode="horizontal"
        app:cnb_addBottomInset="false"
        app:cnb_addLeftInset="false"
        app:cnb_addRightInset="false"
        app:cnb_addTopInset="false"
        app:cnb_unselectedColor="@color/bottom_menu_item_color"
        app:cnb_badgeColor="@color/menu_badge_color"
        android:background="@color/colorPrimary"
        app:cnb_radius="8dp"
        app:cnb_iconSize="24dp"
        app:cnb_textAppearance="?titleTextAppearance"/>

  </LinearLayout>

</layout>
